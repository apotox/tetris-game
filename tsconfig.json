{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": ["DOM"],
        "allowJs": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./lib"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}